<div class="flex gap-4 p-4 mb-3 bg-background border border-gray-3 rounded items-end" data-column-row>
  <div class="flex-1">
    <%= label_tag nil, t(".column_name"), class: "block font-medium mb-2 text-gray-2" %>
    <%= text_field_tag nil, local_assigns[:column_name],
        class: "column-name w-full",
        autocomplete: "off",
        data: { action: "input->custom-csv-census#updateHiddenFields" } %>
  </div>

  <div class="flex-1">
    <%= label_tag nil, t(".column_type"), class: "block font-medium mb-2 text-gray-2" %>
    <%= select_tag nil, options_for_select(column_types_options, local_assigns[:column_type]),
        class: "column-type w-full",
        data: { action: "change->custom-csv-census#updateHiddenFields" } %>
  </div>

  <button type="button"
          class="button button__xs button__transparent-secondary mb-2"
          title="<%= t(".delete") %>"
          data-action="click->custom-csv-census#removeColumn">
    <%= icon "delete-bin-line" %>
  </button>
</div>
